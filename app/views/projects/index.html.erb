<div class="card">
  <div class="card-body">
    <h2 class="card-title d-flex justify-content-between mb-4">
      <span class="text-dark"><b>Projetos</b></span>
      <%= link_to 'Novo Projeto', new_project_path, class: 'btn btn-success' %>
    </h2>

    <% @projects.each do |project| %>
      <%= link_to project, class: 'text-decoration-none' do %>
        <div class="card project-card mb-3">
          <div class="card-body">
            <div class="mb-3">
              <span class="badge badge-<%= project.badge_color %> mb-3"><%= project.status %></span>
              <span class="text-secondary">
                <small>
                  <%= project.percent_complete %>% completo
                  (<%= project.total_complete %>/<%= project.total_tasks %> tarefas)
                </small>
              </span>
            </div>
            <h3 class="card-title text-success"><b><%= project.name %></b></h3>
            <p class="text-secondary"><%= project.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
